TOP = ..
include $(TOP)/configure/CONFIG

install: builder_path.py

BUILDERPATH = $(shell readlink -f $(EPICSDBBUILDER))

builder_path.py: $(TOP)/configure/CONFIG_SITE
	echo '# Default path auto-generated by installation' >$@
	echo 'path = '\'$(BUILDERPATH)\' >>$@

builder_path.py: $(TOP)/configure/

clean:
	rm -f builder_path.py *.pyc
